<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/subject_wise_performance_view">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/activity_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:textColor="@color/dash_gif_blue"
                android:text="Course Name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="Due Date"
                android:textSize="10sp"
                android:id="@+id/due_date_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:id="@+id/submitted_date_tv"
                android:text="Submitted Date"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:text="Time Spent"
                android:id="@+id/unit_time_spent"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/is_dark_blue"
                android:includeFontPadding="false"
                android:text="Submitted Status"
                android:id="@+id/submission_status"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:text="Score"
                android:textColor="@color/dash_gif_blue"
                android:textStyle="bold"
                android:id="@+id/score_in_rec"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/rubik"
                android:includeFontPadding="false"
                android:text="Grade"
                android:textColor="@color/dash_gif_blue"
                android:textStyle="bold"
                android:id="@+id/grade_in_rec"
                android:textSize="20sp" />





        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>