<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:id="@+id/more_ll"
    tools:context=".fragment.MoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/card_view_more"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:id="@+id/image_more"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/card_view_more"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:id="@+id/more_name_tv"
                android:textColor="@color/dash_gif_blue"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:id="@+id/more_grade_tv"
                android:textColor="@color/dash_gif_blue"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="5dp"
                android:background="@color/is_light_blue"
                android:paddingHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="View Profile"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/dash_gif_blue"
                android:id="@+id/btn_more_profile"/>




        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/is_light_blue"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@color/is_light_blue"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/rubik_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="My Notes"
        android:textColor="@color/dash_gif_blue"
        android:id="@+id/notes_btn_more"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="5dp"
        android:background="@color/is_light_blue"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/rubik_medium"
        android:text="performance"
        android:textColor="@color/dash_gif_blue"
        android:id="@+id/performance_btn_more"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@color/is_light_blue"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:layout_marginHorizontal="10dp"
        android:text="LogOut"
        android:textColor="@color/dash_gif_blue"
        android:id="@+id/log_out_btn_more"/>

</LinearLayout>