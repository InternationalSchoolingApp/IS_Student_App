<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activity.ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:id="@+id/profile_back_button"
            app:tint="@color/dash_gif_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/rubik_medium"
            android:includeFontPadding="false"
            android:text="My Profile"
            android:textSize="20sp" />


    </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/login_background"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardElevation="10dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/profile_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:id="@+id/name_tv"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:id="@+id/email"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:id="@+id/grade_tv"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/login_background"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:id="@+id/rollNumber"
                    android:layout_below="@+id/rollNumberText"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:id="@+id/addmission_tv"
                    android:layout_below="@+id/addmission_tv_text"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:id="@+id/phone_number"
                    android:layout_below="@+id/contact_text"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="10dp"/>



                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:id="@+id/city_tv"
                    android:layout_below="@+id/location_text"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp"
                    android:includeFontPadding="false"
                    android:id="@+id/parent_name"
                    android:layout_below="@+id/parent_text"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>




        </LinearLayout>







</LinearLayout>